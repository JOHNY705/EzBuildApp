<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_equipment_outline"
    android:paddingBottom="@dimen/_8sdp">

    <hr.itrojnar.ezbuild.utils.EzBuildTextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_equipment_selection"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dialog_warehouse_equipment"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:gravity="center_horizontal">

        <hr.itrojnar.ezbuild.utils.EzBuildButton
            android:id="@+id/btn_dialog_equipment_cancel"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:text="@string/btn_cancel"/>

    </LinearLayout>
</LinearLayout>