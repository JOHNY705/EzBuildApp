<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_1sdp"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <hr.itrojnar.ezbuild.utils.EzBuildTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingEnd="0dp"
                    android:paddingStart="@dimen/_3sdp"
                    android:textSize="@dimen/_11sdp"
                    android:text="@string/lbl_cs_diary_entry_authorized_employee"
                    tools:text="Ovlaštena osoba:"/>

                <hr.itrojnar.ezbuild.utils.EzBuildTextView
                    android:id="@+id/tv_item_cs_diary_entry_authorized_employee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="start"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    tools:text="Pero Perić"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <hr.itrojnar.ezbuild.utils.EzBuildTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingEnd="0dp"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textSize="@dimen/_11sdp"
                    android:text="@string/lbl_cs_diary_entry_description_work_day"
                    tools:text="Opis radnoga dana:"/>

                <hr.itrojnar.ezbuild.utils.EzBuildTextView
                    android:id="@+id/tv_item_cs_diary_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="start"
                    android:paddingTop="0dp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_1sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    tools:text="Rad na konstrukciji zgrade, kitanje, rad na fasadi, ojačavanje metalne konstrukcije"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <hr.itrojnar.ezbuild.utils.EzBuildTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingEnd="0dp"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textSize="@dimen/_11sdp"
                    android:text="@string/lbl_cs_diary_entry_date"
                    tools:text="Datum unosa:"/>

                <hr.itrojnar.ezbuild.utils.EzBuildTextView
                    android:id="@+id/tv_item_cs_diary_entry_date_of_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="start"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    tools:text="27/02/2022"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_construction_site_diary_entry_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/_2sdp"
                android:contentDescription="@string/image_contentDescription"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more_vert"
                android:visibility="visible"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>