<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragments.AddDiaryEntryFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_edit_diary_entry_date"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:hint="@string/et_hint_date_of_diary_entry"
        android:textColorHint="@color/color_secondary_text">

        <hr.itrojnar.ezbuild.utils.EzBuildEditText
            android:id="@+id/et_edit_diary_entry_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="text"
            android:maxLines="2"
            android:padding="@dimen/_13sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            tools:text="22.2.2022" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_diary_entry_edit"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:hint="@string/et_hint_diary_entry"
        android:textColorHint="@color/color_secondary_text">

        <hr.itrojnar.ezbuild.utils.EzBuildEditText
            android:id="@+id/et_diary_entry_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="8"
            android:padding="@dimen/_13sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            tools:text="Testni zapis" />

    </com.google.android.material.textfield.TextInputLayout>

    <hr.itrojnar.ezbuild.utils.EzBuildButton
        android:id="@+id/btn_save_diary_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/button_background"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:text="@string/btn_lbl_save_diary_entry"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp" />

</LinearLayout>