<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_1sdp"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_construction_site_rv_image"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:padding="@dimen/_6sdp"
            tools:src="@mipmap/ic_launcher"
            android:contentDescription="@string/image_contentDescription"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <hr.itrojnar.ezbuild.utils.EzBuildTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingEnd="0dp"
                    android:paddingStart="@dimen/_3sdp"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/lbl_cs_manager"
                    tools:text="Voditelj:"/>

                <hr.itrojnar.ezbuild.utils.EzBuildTextView
                    android:id="@+id/tv_item_cs_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="start"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    tools:text="Pero PeriÄ‡"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <hr.itrojnar.ezbuild.utils.EzBuildTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingEnd="0dp"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/lbl_cs_number_of_workers"
                    tools:text="Broj radnika:"/>

                <hr.itrojnar.ezbuild.utils.EzBuildTextView
                    android:id="@+id/tv_item_cs_number_of_workers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="start"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    tools:text="12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_construction_site_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location_24"
                    android:contentDescription="@string/image_contentDescription" />

                <hr.itrojnar.ezbuild.utils.EzBuildTextView
                    android:id="@+id/tv_item_cs_full_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    tools:text="Ilica 121, Zagreb, Hrvatska"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_construction_site_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:contentDescription="@string/image_contentDescription"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            android:visibility="gone"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>