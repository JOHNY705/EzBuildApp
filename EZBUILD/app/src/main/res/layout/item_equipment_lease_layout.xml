<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_1sdp"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_equipment_rv_image"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:padding="@dimen/_6sdp"
            android:layout_gravity="center"
            tools:src="@mipmap/ic_launcher"
            android:contentDescription="@string/image_contentDescription"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:gravity="center"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <hr.itrojnar.ezbuild.utils.EzBuildTextViewBold
                    android:id="@+id/tv_item_equipment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="start"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    tools:text="Bosch buÅ¡ilica"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <hr.itrojnar.ezbuild.utils.EzBuildTextViewBold
                    android:id="@+id/tv_equipment_quantity_placeholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingEnd="0dp"
                    android:paddingStart="@dimen/_3sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/lbl_equipment_quantity"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:gravity="start">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ib_equipment_lease_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:tint="@color/primary_color"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_remove_24"/>

                    <hr.itrojnar.ezbuild.utils.EzBuildTextView
                        android:id="@+id/tv_equipment_lease_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_grey_border_background"
                        android:gravity="start"
                        android:inputType="number"
                        android:paddingStart="@dimen/_6sdp"
                        android:paddingEnd="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        tools:text="8"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ib_equipment_lease_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:background="@android:color/transparent"
                        android:tint="@color/primary_color"
                        android:src="@drawable/ic_add"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <hr.itrojnar.ezbuild.utils.EzBuildTextView
                    android:id="@+id/tv_item_equipment_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="start"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    tools:text="Testni opis opreme"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_delete_equipment_lease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:contentDescription="@string/image_contentDescription"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/colorSnackBarError"
            android:src="@drawable/ic_delete_24"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>